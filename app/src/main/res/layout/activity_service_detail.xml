<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ServiceDetailActivity"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Service Name"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Content Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Service Image -->
            <ImageView
                android:id="@+id/imgServiceDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <!-- Service Title -->
            <TextView
                android:id="@+id/txtServiceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor Deep Cleaning"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/txtServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starts from à§³2800"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <!-- Details -->
            <TextView
                android:id="@+id/txtServiceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprehensive cleaning of the floor with vacuum, mopping, and stain removal."
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>
