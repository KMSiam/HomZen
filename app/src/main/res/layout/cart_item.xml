<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="@dimen/elevation_xs"
    app:cardBackgroundColor="@color/surface_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Product Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/neutral_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="Product image" />

        </androidx.cardview.widget.CardView>

        <!-- Product Details -->
        <LinearLayout
            android:id="@+id/product_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/image_container"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintEnd_toStartOf="@id/delete_button">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/neutral_900"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Per Unit"
                android:textColor="@color/neutral_600"
                android:textSize="@dimen/text_sm" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="৳999"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="20dp"
            app:iconTint="@color/error"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:backgroundTint="@color/neutral_100"
            app:cornerRadius="@dimen/radius_sm"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral_300"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            app:layout_constraintTop_toTopOf="@id/image_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Quantity Controls -->
        <LinearLayout
            android:id="@+id/quantity_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_quantity_container"
            android:padding="@dimen/spacing_xs"
            app:layout_constraintTop_toBottomOf="@id/image_container"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Decrease Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/decrease_quantity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:icon="@drawable/ic_remove"
                app:iconSize="16dp"
                app:iconTint="@color/neutral_700"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:backgroundTint="@color/surface_primary"
                app:cornerRadius="@dimen/radius_sm"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon" />

            <!-- Quantity Display -->
            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_sm"
                android:text="1"
                android:textColor="@color/neutral_900"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Increase Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/increase_quantity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:icon="@drawable/ic_add"
                app:iconSize="16dp"
                app:iconTint="@color/primary_green"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:backgroundTint="@color/primary_green_50"
                app:cornerRadius="@dimen/radius_sm"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon" />

        </LinearLayout>

        <!-- Total Price -->
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="৳999"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/quantity_controls"
            app:layout_constraintBottom_toBottomOf="@id/quantity_controls"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
