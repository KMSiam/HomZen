<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ServiceFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:background="@color/white"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Search Bar -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchViewService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/lavender_border"
                android:queryHint="What service are you looking for?"
                android:iconifiedByDefault="false"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                app:searchHintIcon="@null"
                app:searchIcon="@drawable/ic_search"
                app:closeIcon="@drawable/ic_close" />

            <!-- Category Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/categoryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <!-- Example category chips -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FilterChipStyle"
                        android:text="All" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBathroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FilterChipStyle"
                        android:text="Bathroom" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipKitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FilterChipStyle"
                        android:text="Kitchen" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFloor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FilterChipStyle"
                        android:text="Floor" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWindow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FilterChipStyle"
                        android:text="Window" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- RecyclerView for services -->
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/recyclerServices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

</LinearLayout>